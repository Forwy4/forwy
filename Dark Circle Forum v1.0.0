/* ==UserStyle==
@name           Dark Circle Forum
@namespace      https://github.com/Forwy4/forwy
@version        1.0.0
@description    Dark style for forum.wowcircle.com
@author         Forwy
==/UserStyle== */
@-moz-document domain("forum.wowcircle.com") {
   :root {
      --color-font: #dbdbdb;
      --main-bg-color: #202020;
      --black-bg-color: #424242;
      --border: #cacaca;
   }
   *::selection {
      color: black;
      background-color: yellow;
   }
   *::-webkit-scrollbar {
      width: 15px !important;
      height: 10px !important;
      background: var(--main-bg-color) !important;
      border: 1px solid var(--main-bg-color) !important;
      transition: 1s ease;
      opacity: 0.5;
   }
   .scrollbar:hover {
      transition: 1s ease;
      opacity: 1;
   }
   *::-webkit-scrollbar-thumb {
      min-height: 28px !important;
      background: var(--black-bg-color) !important;
   }
   * {
      font-family: sans-serif;
      font-size: 12.5px;
      color: var(--color-font);
   }
   a:link,
   #sidebar_container a,
   #sidebar_container.member_summary .textcontrol,
   li.userprof_content a {
      font-size: 13px;
      color: var(--color-font);
      transition: 0.5s ease
   }
   a:link:hover,
   #sidebar_container a:hover,
   #sidebar_container.member_summary .textcontrol:hover,
   li.userprof_content a:hover {
      font-size: 13px;
      color: white;
      transition: 0.5s ease
   }
   a:hover {
      font-size: 13px;
      color: white;
      transition: 0.5s ease
   }
   .time {
      color: var(--color-font);
   }
   #header img {
      content: url("https://i.imgur.com/TFAfdOC.png")
   }
   .pagination span.prev_next a[rel*="prev"] img {
      content: url(https://i.imgur.com/0QugXcl.png);
   }
   .pagination span.prev_next a[rel*="next"] img {
      content: url(https://i.imgur.com/WQ7LZH7.png);
   }
   .pagination span.first_last a[rel*="start"] img {
      content: url(https://i.imgur.com/KNy2dU9.png);
   }
   .pagination span.first_last a img {
      content: url(https://i.imgur.com/sum0WOX.png);
   }
   a[onclick*="imwindow('skype',"] img {
      content: url(images/misc/im_skype.gif);
   }
   div .lastposttitle img {
      content: url(https://i.imgur.com/TiPzLfU.png);
      border-radius: 2px;
   }
   .above_body {
      background: var(--main-bg-color);
      margin: 0px 0px 10px 0px;
      padding: 0px 0px 0px 0px;
   }
   html {
      box-shadow: inset 5px -20px 20px 5px var(--black-bg-color);
      background: var(--main-bg-color);
   }
   .body_wrapper {
      padding: 10px 20px 10px 20px;
      background: var(--main-bg-color) none;
      -moz-border-radius: 5px;
      -webkit-border-radius: 5px;
      border-radius: 5px;
   }
   .forumhead {
      background-color: var(--main-bg-color);
      padding: 0;
      font: bold 13px Arial, Tahoma, Calibri, Verdana, Geneva, sans-serif;
      clear: both;
      margin-top: 8px;
      float: left;
      border: 1px solid var(--border);
      width: 100%;
      border-top-right-radius: 5px;
      border-top-left-radius: 5px;
   }
   .forumbit_nopost .forumhead .forumtitle a {
      margin-left: 10px;
   }
   body a {
      text-decoration: none;
      color: var(--color-font);
   }
   body a:hover {
      color: var(--color-font);
   }
   .forumhead + .childforum .L2:first-child .forumrow,
   .forumhead + .L2 .forumrow {
      border-top: 110;
   }
   .forumbit_nopost .forumbit_nopost .forumrow,
   .forumbit_post .forumrow {
      display: block;
      width: 100%;
      float: left;
      min-height: 58px;
      position: relative;
      border-bottom: 1px solid #c4c4c4;
      border-left: 1px solid #c4c4c4;
      border-right: 1px solid #c4c4c4;
   }
   .notices li {
      background: var(--black-bg-color) none;
      font-size: 13px;
      color: var(--color-font);
      padding: 5px 10px;
      margin-bottom: 5px;
      -moz-box-shadow: none;
      -webkit-box-shadow: none;
      box-shadow: none;
      text-align: left;
      clear: both;
      border: 4mm ridge rgb(255, 255, 255);
      transition: 0.5s ease;
      opacity: 1;
   }
   .notices li:hover {
      border: 4mm ridge rgb(41, 41, 41);
      transition: 0.5s ease;
      opacity: 1;
   }
   .navbar {
      position: relative;
      height: 53px;
      background: var(--main-bg-color) none;
      margin: 10px 0px 0px 0px;
      color: var(--color-font);
      font: 11px sans-serif;
      border: 0px solid;
   }
   .navtabs {
      background: var(--main-bg-color);
      padding: 0px 0px 0px 20px;
      height: 26px;
      border: none;
   }
   .navtabs li a.navtab {
      border-top: 1px solid;
      border-left: 1px solid;
      display: block;
      background: none;
      min-width: 60px;
      width: auto !important;
      text-align: center;
      color: var(--color-font);
      font: bold 12px Arial, Calibri, Verdana, Geneva, sans-serif;
      text-decoration: none;
      line-height: 26px;
      padding: 0 10px;
      transition: margin-left 4s, color 0s;
   }
   .navtabs li {
      float: left;
      border-right: 0.1px solid #fff;
   }
   .navtabs li:first-child {
      border-left: 0.1px solid #fff;
   }
   .globalsearch .buttoncontainer {
      height: 26px;
      border-left: 1px solid #fff;
      display: inline-block;
      border-right: 1px solid #fff;
      width: 25px;
      overflow: hidden;
   }
   .navtabs ul {
      height: 26px;
      position: absolute;
      top: 26px;
      left: 0px;
      width: 100%;
      border-top: 1px solid #fff;
      -moz-border-radius-bottomleft: 5px;
      -moz-border-radius-bottomright: 5px;
      -webkit-border-bottom-left-radius: 5px;
      -webkit-border-bottom-right-radius: 5px;
      border-bottom-left-radius: 5px;
      border-bottom-right-radius: 5px;
      margin-right: -80px;
      direction: ltr;
   }
   .navtabs li.selected a.navtab {
      color: #000000;
      box-shadow: inset 15px -25px 15px -25px;
      background-color: white;
      position: relative;
      top: -4px;
      padding-top: 4px;
      z-index: 10;
   }
   .forumbit_nopost .forumbit_nopost .forumrow,
   .forumbit_post .forumrow {
      color: var(--color-font);
      background: none;
      display: block;
      width: 100%;
      float: left;
      min-height: 58px;
      position: relative;
      border-bottom: 1px solid #c4c4c4;
      border-left: 1px solid #c4c4c4;
      border-right: 1px solid #c4c4c4;
   }
   .forumhead + .childforum .L2:first-child .forumrow,
   .forumhead + .L2 .forumrow {
      background: none;
      border-top: 0;
   }
   .toplinks {
      position: absolute;
      right: 0px;
      top: 0;
      color: #ffffff;
      font: normal normal normal 11px Arial, Tahoma, Calibri, Verdana, Geneva, sans-serif;
      text-align: right;
      background: none;
   }
   .toplinks ul.isuser li.welcomelink {
      display: block;
      clear: left;
      padding-top: 2px;
      padding-bottom: 0;
      padding-left: 0;
      padding-right: 50px;
      color: #FFFFFF;
   }
   .toplinks ul.isuser li.welcomelink a {
      display: inline;
      float: none;
      clear: none;
      margin-left: 0;
   }
   .toplinks ul.isuser li.welcomelink a:hover {
      display: inline;
      background-color: var(--main-bg-color);
      float: none;
      clear: none;
      margin-left: 0;
   }
   .toplinks .notifications a.popupctrl:hover,
   .toplinks .nonotifications a.popupctrl:hover,
   .toplinks .nonotifications a.popupctrl.active,
   .toplinks .notifications a.popupctrl.active {
      padding-top: 3px;
      padding-bottom: 3px;
      padding-left: 4px;
      padding-right: 15px;
      background: var(--black-bg-color) url(images/misc/arrow.png) no-repeat right center;
   }
   .toplinks ul.isuser li a:hover {
      background-color: var(--black-bg-color);
      border-bottom-right-radius: 8px;
      border-bottom-left-radius: 8px;
      display: block;
      padding-top: 3px;
      padding-bottom: 3px;
      padding-left: 4px;
      padding-right: 4px;
      font-weight: bold;
      color: #ffffff;
   }
   .navlinks {
      background: none;
      border-top: 1px solid #e7e7e7;
      padding: 10px 0;
      text-align: center;
      color: #5d5d5d;
      font-size: 13px;
      margin-top: 20px;
      margin-bottom: 20px;
      width: 100%;
      clear: both;
   }
   .wgo_block .blockbody {
      border: 1px solid #c4c4c4;
      background: url(images/gradients/gradient-greytowhite.png) repeat-x;
      _background-image: none;
   }
   .wgo_block .blockhead {
      font-size: 12px;
      font-weight: bold;
      color: rgb(255, 255, 255);
      background: var(--main-bg-color) url(images/buttons/newbtn_middle.png);
      _background-image: none;
      border: 1px solid #606060;
   }
   .wgo_block .blocksubhead {
      padding-left: 10px;
      font: 12px;
      color: #3e3e3e;
      background: none;
      background-color: var(--color-font);
      border: 2px whitesmoke solid;
      padding-bottom: 2px;
   }
   .footer {
      clear: both;
      margin-top: 15px;
      text-align: right;
      display: block;
      -moz-box-shadow: -2px 2px 2px #c8c8c8;
      -webkit-box-shadow: -2px 2px 2px #c8c8c8;
      box-shadow: -2px 2px 2px #c8c8c8;
      background: var(--main-bg-color) none;
      padding: 5px 0px 5px 0px;
      border: 1px solid #fff;
      font: normal 13px Tahoma, Calibri, Verdana, Geneva, sans-serif;
   }
   .popupbody li a:hover,
   .toplinks .nonotifications .popupbody a:hover,
   #usercp_nav .blockrow * a:hover {
      background-color: var(--color-font);
      color: black;
   }
   #usercp_nav li a.usercp_folder-left {
      background-color: var(--main-bg-color);
      border: 1px white solid;
   }
   #usercp_nav .blockbody {
      background-color: var(--main-bg-color);
      border: none;
   }
   .blockfoot,
   .blocksubfoot {
      padding-top: 10px;
      border: none;
      background: none;
   }
   .blockhead,
   #sidebar_container.member_summary,
   #sidebar_container .userprof_content .blockrow,
   #usercp_nav .blockrow * a,
   .pmlist .blockrow,
   #forum_icon_legend h5,
   li.userprof_content_border,
   #activity_tab_container > div,
   .above_threadlist .newcontent_textcontrol,
   .threadbit .threadstatus,
   .threadbit .threadinfo,
   .threadbit .threadinfo_withnotification,
   .threadbit .threadstats,
   .threadbit .threadlastpost,
   .threadbit .threaddeleted,
   .threadbit .threadnotification,
   .threadbit .nothreadstatus,
   .threadbit .threadthread,
   .threadbit img.statusicon,
   .threadlisthead,
   .below_threadlist .newcontent_textcontrol,
   .pagination span a.popupctrl,
   .pagination span.selected a,
   .pagination span a,
   .blockbody.settings_form_border,
   h2.searchlisthead,
   .threadbit .alt,
   .blockrow,
   .newcontent_textcontrol,
   .postbitlegacy .postbody,
   .eventbit .eventdetails .eventbody,
   .postbit .posthead,
   .postbitlegacy .posthead,
   .eventbit .eventhead,
   li.sgicon .maincol,
   #sidebar li.sgicon .maincol,
   #sidebar_container .block,
   li.sgicon .controls a.textcontrol,
   .cke_skin_kama .cke_dialog_contents a.cke_dialog_ui_button_ok,
   .cke_skin_kama .cke_dialog_contents a.cke_dialog_ui_button_cancel,
   .textcontrols a,
   a.textcontrol,
   .navpopupmenu.popupmenu.nohovermenu a.textcontrol:hover,
   .navpopupmenu.popupmenu.nohovermenu a.popupctrl:hover,
   .navpopupmenu.popupmenu.nohovermenu a.textcontrol,
   .navpopupmenu.popupmenu.nohovermenu a.popupctrl,
   .userprof_button,
   .spoiler > h2 {
      background-color: var(--main-bg-color);
      border: 1px white solid;
      border-radius: 2px;
   }
   .postbitlegacy .postdetails,
   .eventbit .eventdetails,
   .postbitlegacy .userinfo,
   #content .blockrow > li,
   #content .blockrow > ol,
   #content .blockrow > div,
   #sidebar li.sgicon,
   .spoiler > div {
      background-color: var(--main-bg-color);
      border-radius: 2px;
   }
   .threadbit .nonsticky,
   .threadbit .discussionrow,
   .threadbit .sticky {
      background: none;
      border: 3px var(--main-bg-color) solid;
   }
   .pagination span a:hover,
   .pagination span a:link {
      border: 1px white solid;
      color: var(--color-font);
   }
   .navtabs .popupbody {
      border: none;
      background: none;
      border-top: none;
   }
   .navtabs .popupbody li {
      border-top: 1px black solid;
   }
}
